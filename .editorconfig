# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,json}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

